    <style>
        .t1 {
            width:50px;
            float:left;
            text-align:right;
        }
        .t11 {
            width:100px;
            float:left;
            text-align:right;
        }
        .t22 {
            width:150px;

        }
        .t2 {
            width:0px;
            float:left;
            text-align:right;
        }
        .sub {
            width: 450px;
            margin: 20px;
            text-align: center;
        }
        .bnt1 {
            width:200px;
            height:50px;
            float:left;
            text-align:center;
        }
        .div1 {
            margin: 10px;

        }
        td {
            text-align:center;
        }
        body {
            background-repeat:no-repeat;
            background-color: #ECF5FF;
        }
